<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow for the Bottom Navigation Bar -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1FC3C3C3" /> <!-- Background color -->
            <corners android:topLeftRadius="30dp"
                android:topRightRadius="30dp" /> <!-- Corner radius, adjust as needed -->
             <padding android:top="1dp"/>

            <stroke android:width="0dp"
                android:color="@color/white"/>

        </shape>
    </item>

    <!-- Bottom Navigation Bar Background Shape -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <corners android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />

            <stroke android:width="0dp"
                android:color="@color/white"/><!-- Corner radius, adjust as needed -->
        </shape>
    </item>
</layer-list>



